<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@color/light_green">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:minHeight="90dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Droplets + Levels"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />
    </Toolbar>

    <include
        android:id="@+id/popup_close"
        layout="@layout/header_close_button"
        tools:layout_editor_absoluteX="-83dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageButton
        android:id="@+id/close_popup"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/circle"
        android:src="@drawable/icon_close"
        android:backgroundTint="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/img_star"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:layout_marginEnd="276dp"
        android:background="@drawable/hp_buttons_background"
        android:src="@drawable/baseline_star_outline_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="@+id/popup_close"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.31" />

    <ImageView
        android:id="@+id/img_cloud"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:background="@drawable/hp_buttons_background"
        android:src="@drawable/baseline_cloud_queue_24"
        app:layout_constraintEnd_toEndOf="@+id/img_star"
        app:layout_constraintStart_toStartOf="@+id/img_star"
        app:layout_constraintTop_toBottomOf="@+id/img_star" />





</androidx.constraintlayout.widget.ConstraintLayout>