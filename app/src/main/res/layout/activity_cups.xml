<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cups"
    android:background="@color/light_green">

    <ImageView
        android:id="@+id/white_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_edges"
        android:backgroundTint="@color/white"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="180dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>

    <TextView
        android:id="@+id/select_cup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your cup"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="@+id/white_background"
        app:layout_constraintTop_toTopOf="@+id/white_background" />

    <Button
        android:id="@+id/fifty_ml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/white_background"
        app:layout_constraintStart_toStartOf="@id/white_background"
        app:layout_constraintTop_toBottomOf="@+id/select_cup_text"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_edges"
        android:backgroundTint="@color/light_grey"
        android:padding="20dp"
        android:drawableRight="@drawable/small_cup"
        android:text="50 ml"
        android:gravity="left"/>

    <Button
        android:id="@+id/hundred_ml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/white_background"
        app:layout_constraintStart_toStartOf="@id/white_background"
        app:layout_constraintTop_toBottomOf="@+id/fifty_ml"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_edges"
        android:backgroundTint="@color/light_grey"
        android:padding="20dp"
        android:drawableRight="@drawable/small_wine_glass"
        android:text="100 ml"
        android:gravity="left"/>

    <Button
        android:id="@+id/hundred_fifty_ml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/white_background"
        app:layout_constraintStart_toStartOf="@id/white_background"
        app:layout_constraintTop_toBottomOf="@+id/hundred_ml"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_edges"
        android:backgroundTint="@color/light_grey"
        android:padding="20dp"
        android:drawableRight="@drawable/small_plastic_cup"
        android:text="150 ml"
        android:gravity="left"/>

    <Button
        android:id="@+id/two_hundred_ml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/white_background"
        app:layout_constraintStart_toStartOf="@id/white_background"
        app:layout_constraintTop_toBottomOf="@+id/hundred_fifty_ml"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_edges"
        android:backgroundTint="@color/light_grey"
        android:padding="20dp"
        android:drawableRight="@drawable/small_measuring_cup"
        android:text="200 ml"
        android:gravity="left"/>

</androidx.constraintlayout.widget.ConstraintLayout>