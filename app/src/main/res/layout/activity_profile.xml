<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green">


    <LinearLayout
        android:id="@+id/imageView2"
        android:layout_width="255dp"
        android:layout_height="451dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/round_edges"
        android:backgroundTint="@color/dark_green"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header_close_button">

        <TextView
            android:id="@+id/your_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:text="Your name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/username_shown"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/s_white_box"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/your_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:text="Your email"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/email_shown"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/s_white_box"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/your_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:text="Your age"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/age_shown"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/s_white_box"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/your_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:text="Your weight"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/weight_shown"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/s_white_box"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/your_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:text="Do you have health issues?"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/health_shown"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/s_white_box"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/your_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:text="Frequency of sport"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/sport_shown"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/s_white_box"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/your_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:text="Your gender"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/gender_shown"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/s_white_box"
            android:gravity="center"
            android:textColor="@color/black" />

    </LinearLayout>

    <Button
        android:id="@+id/button_personal_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_edges"
        android:backgroundTint="@color/yellow"
        android:padding="10dp"
        android:text="Change data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_logout"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/hp_profile_background"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop" />


    <ImageButton
        android:id="@+id/edit_profile_pic"
        android:layout_width="51dp"
        android:layout_height="32dp"
        android:background="@drawable/icon_edit_bottom"
        android:backgroundTint="@color/white"
        android:src="@drawable/baseline_edit_24"
        app:layout_constraintBottom_toBottomOf="@+id/profile_picture"
        app:layout_constraintEnd_toEndOf="@+id/profile_picture"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/profile_picture"
        app:layout_constraintTop_toTopOf="@+id/profile_picture"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/yellow"
        android:src="@drawable/icon_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <include
        android:id="@+id/header_close_button"
        layout="@layout/header_close_button"
        android:layout_width="413dp"
        android:layout_height="74dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_edges"
        android:backgroundTint="@color/red"
        android:text="@string/log_out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_personal_information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


</androidx.constraintlayout.widget.ConstraintLayout>